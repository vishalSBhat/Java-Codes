	function validate()
	{
	 	var ph_no=document.getElementById("ph_no");
	 	var regx=/\d{10}/;
	 	if(regx.test(ph_no.value))
	 		return true;
	 	else
	 	{
	 		document.getElementById("validation").style.visibility="visible";
	 		return false;
	 	}
	}</script>
</head>
